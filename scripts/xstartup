#!/bin/bash
# VNC xstartup script - minimal X session for headless Docker

export DISPLAY=:1

# Set grey background
xsetroot -solid grey 2>/dev/null || true

# Start xterm as the main terminal (more reliable than gnome-terminal in headless)
/usr/bin/x-terminal-emulator -e /bin/bash &

# Keep the session alive
tail -f /dev/null
